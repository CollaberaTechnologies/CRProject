<nav class="navbar1 navbar-default">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <a class="navbar-brand" href="/Account/login"> <img src="~/images/Logo (2).jpg" /></a>
    </div>
    <div>
        <ul class="nav navbar-nav navbar-right" style="margin-right:6px;">
            <li><h3>CR</h3></li>
        </ul>
    </div><!-- /.navbar-collapse -->
    <!-- Collect the nav links, forms, and other content for toggling -->

</nav>
<section class="loginbg">
    @using (Html.BeginForm("ForgotPassword1", "Account"))
    {
        @Html.AntiForgeryToken()
        <!--forgor password view-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <div class="form-gap"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <h3><i class="fa fa-unlock fa-4x"></i></h3>
                                <h2 class="text-center">Forgot Password?</h2>
                                <p>You can reset your password here.</p>
                                <div class="panel-body">

                                    <form id="register-form" role="form" autocomplete="off" class="form" method="post">

                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "email address" } })
                                                @Html.ValidationMessageFor(Model => Model.Email, "", new { @class = "text-danger" })
                                                @*<input id="email" name="email" placeholder="email address" class="form-control" type="email">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input name="recover-submit" id="sendbtn" class="btn btn-lg btn-primary btn-block" value="Send" type="submit">
                                            <label class="text-danger">@ViewBag.Message</label>
                                        </div>

                                        <div class="col-md-7 text-right">
                                            <a class="link" href="/Account/Login">Login</a>
                                        </div>
                                        <input type="hidden" class="hide" name="token" id="token" value="">
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

<footer>
    <div class="container">
        <div class="footer text-center">
            <h5>
                Copyright©2018Collabera. All rights Reserved.
            </h5>
        </div>
    </div>
</footer>
@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@

<script>
    $(document).ready(function () {
        $(' #sendbtn').click(function () {
            debugger;
            var x = document.getElementById("email").value;
            if (x == "") {
                alert("Please enter emailaddress");
                document.getElementById('sendbtn').disabled = 'disabled';
            }
        });
        $("#email").change(function () {
            document.getElementById('sendbtn').disabled = '';
        });

    });
</script>
